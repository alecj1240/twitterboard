<div class="container-center">
    <h1 class="text-center">Your Potential Jobs</h1>

    <%= link_to "Filter by Followers", url_for(:filter => 'followers'), class: "btn btn-primary" %>
    <%= link_to "Filter by Following", url_for(:filter => 'following'), class: "btn btn-primary" %>
    <% if !@filter.nil? %>
        <%= link_to "Remove Filters", url_for(), class: "btn btn-danger" %>
    <% end %>

    <% @jobs.in_groups_of(4, false).each do |group| %>
        <div class='row'>
            <% group.each do |job| %>
                <div class='col-md-3'>
                    <blockquote class="twitter-tweet"><a href=<%= job.link %>></a></blockquote> 
                </div>
            <% end %>
        </div>
    <% end %>
</div>

<script src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>